@model ApplicationUserVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Category</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="ApplicationUser.Id" hidden />
            <div class="border p-3 mt-4">
                @*<div asp-validation-summary="All"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="ApplicationUser.Name" class="form-control border-0 shadow" />
                    <label asp-for="ApplicationUser.Name" class="ms-2"></label>
                    <span asp-validation-for="ApplicationUser.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="ApplicationUser.Role" asp-items="@Model.Roles" class="form-select border-0 shadow">
                        <option disabled selected>--Select Role--</option>
                    </select>
                    <label asp-for="ApplicationUser.Role" class="ms-2">Role</label>
                    <span asp-validation-for="ApplicationUser.Role" class="text-danger"></span>
                </div>
                <div id="CompanySelect" class="form-floating py-2 col-12">
                    <select asp-for="ApplicationUser.CompanyId" asp-items="@Model.Companies" class="form-select border-0 shadow">
                        <option disabled selected>--Select Company--</option>
                    </select>
                    <label asp-for="ApplicationUser.CompanyId" class="ms-2">Company</label>
                    <span asp-validation-for="ApplicationUser.CompanyId" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="User" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    <script>
        function showHide() {
            var selection = $('#ApplicationUser_Role Option:Selected').text();
            if (selection == 'Company') {
                $('#CompanySelect').show();
            } else {
                $('#CompanySelect').hide();
            }
        }
        $(document).ready(function () {
            showHide();
            $('#ApplicationUser_Role').change(showHide);
        })
    </script>
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}
